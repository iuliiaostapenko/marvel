# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]

indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx,d.ts}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.{html,twig}]
indent_size = 2
